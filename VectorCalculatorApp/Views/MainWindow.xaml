<Window x:Class="VectorCalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Vector Calculator" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter Vector 1 (X, Y, Z):"/>
            <TextBox x:Name="txtVector1X"/>
            <TextBox x:Name="txtVector1Y"/>
            <TextBox x:Name="txtVector1Z"/>

            <TextBlock Text="Enter Vector 2 (X, Y, Z):"/>
            <TextBox x:Name="txtVector2X"/>
            <TextBox x:Name="txtVector2Y"/>
            <TextBox x:Name="txtVector2Z"/>

            <Button Content="Compute Cross Product" Click="ComputeCrossProduct_Click"/>
            <TextBlock x:Name="txtResult" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
